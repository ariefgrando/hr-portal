      <section id="main-content">
          <section class="wrapper site-min-height">
          	<h3><i class="fa fa-angle-right"></i> RIWAYAT KEHADIRAN</h3>
          	<hr>		
			
		<h4><i class="fa fa-angle-right"></i><i class="fa fa-angle-right"></i> Pilih Riwayat Kehadiran Untuk Bulan Tertentu </h4></br>
		Bulan &nbsp;&nbsp;
		<form method='post' action='custompresensi'>
		<select name='bulan' id='bulan'>
			<option value='<%=new Date().getMonth()%>' selected><%= new Date().getMonth()+1%>
		<%
			for(var b=1; b < 13; b++) {
			if(b.length<2){
				b='0'+b;
			}
		%>	
			<option value='<%- b %>'><%- b %>
		<%
			}
		%>
		</select>

		&nbsp;&nbsp;

		Tahun &nbsp;&nbsp;
		<select name='tahun' id='tahun'>
			<option value='<%=new Date().getFullYear()%>'><%- new Date().getFullYear()%>
		<%
			for(var t=2012; t < 2021; t++) {
		%>	
			<option value='<%- t %>'><%- t %>
		<%
			}
		%>
		</select>

		&nbsp;&nbsp;<button class='btn btn-theme' type='submit'>Generate</button>
		</form>
		<div class="row mt">
			<div class="col-lg-12">
                      <div class="content-panel" id='riwayatabsensi'>	
					<div style='float:right; cursor:pointer;' onclick='printeveryitem("riwayatabsensi")'><i class="fa fa-print"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
					&nbsp;&nbsp;<%= data.displayName %> - <%= data.employeeNumber %><br/>
					&nbsp;&nbsp;<%= data.title %><br/>
					&nbsp;&nbsp;<%= data.department %><br/>
					&nbsp;&nbsp;<%= data.physicalDeliveryOfficeName %><br/><br/>

