                              <tr>
                                  <th>Tanggal</th>
                                  <th>Hari</th>
				  <th>Datang</th>
				  <th>Pulang</th>
				  <th>Jam Kerja</th>
				  <th>Keterangan</th>

                              </tr>
                              </thead>
                              <tbody>

				<% for(var i=0; i < data2.length; i++) { %>
				   <tr>
